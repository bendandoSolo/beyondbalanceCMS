@inherits Umbraco.Web.Mvc.UmbracoTemplatePage
@using Umbraco.Web;
@{ 
    var site = Model.Content.Site();
    var selection = site.Children.Where(x => x.IsVisible());
}
<!-- uncomment this line if you don't want it to appear in the top navigation <a class="nav-link @Html.Raw(Model.Content.Id == site.Id ? "navi-link--active" : "")" href="@site.Url">@site.Name</a> -->

@foreach (var item in selection)
{
    if(item.Name != "Training" && item.Name != "HOME" && item.Name != "Stress" && item.Name != "Nutrition" && !item.Name.ToLower().Contains("thyroid course") )
    {
    if (item.Name != "THYROID THERAPY"){
    <li class="nav-item" >
        <a class="nav-link active" style="text-transform: uppercase;" href="@item.Url">@item.Name</a>
    </li>}
    else{
        <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          THYROID
        </a>
        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
          <a class="dropdown-item" href="@item.Url" style="text-transform: uppercase;">@item.Name</a>
          @if(item.Children.Count() > 0) {
                    foreach (var sub in item.Children) {
                        <a class="dropdown-item" href="@sub.Url" style="text-transform: uppercase;">@sub.Name</a>
                    }
                }
        </div>
      </li>
    }
