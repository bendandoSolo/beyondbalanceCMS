@* @inherits Umbraco.Web.Mvc.UmbracoTemplatePage<ContentModels.ThyroidCourseModule> *@

@inherits Umbraco.Web.Mvc.UmbracoTemplatePage
@using ContentModels = Umbraco.Web.PublishedContentModels;
@{
    Layout = null;
}

@{
    var selection = Model.Content.Site().FirstChild("ThyroidCourseModule").Children("worksheetsImagesItem");
    //var index = 0;
}


<div class="contentSection" style="background-color: white;">
    <div class="CenterAndRestrictWidth">
        @if (CurrentPage.HasValue("fullWidthArea1Title"))
        {
            <h2 style="padding: 24px 0;"> @Umbraco.Field("fullWidthArea1Title")</h2>}
        <div style="padding: 24px 0;">
            @if (CurrentPage.HasValue("fullWidthArea1Content"))
            {
                <p>@Umbraco.Field("fullWidthArea1Content")</p>
            }
        </div>
        <p></p>
    </div>
</div>


@if (CurrentPage.HasValue("text"))
{
    <div class="pageCaption">
        <h3 class="CenterAndRestrictWidth">
            @Umbraco.Field("text")
        </h3>
    </div>
}

@if (CurrentPage.HasValue("leftImage") && CurrentPage.HasValue("rightImage"))
{
    <div class="row">
        <div class="col-12 col-md-6" style="padding: 0"><img src="@CurrentPage.leftImage.Url" alt="@CurrentPage.leftImage.Name" style="width:100%; height: 100%;padding: 0;" /></div>
        <div class="col-12 col-md-6" style="padding: 0"><img src="@CurrentPage.rightImage.Url" alt="@CurrentPage.rightImage.Name" style="width:100%; height: 100%;padding: 0;" /></div>
    </div>
}

