@inherits Umbraco.Web.Mvc.UmbracoTemplatePage
@{
	Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Beyond Balance | @ViewBag.Title</title>
    @RenderSection("MetaData", false)

    <link rel="shortcut icon" href="~/Content/Images/SocialMedia/BBFlavicon.png" type="image/x-icon" />
    <link rel="icon" href="~/Content/Images/SocialMedia/BBFlavicon.png" type="image/ico" />
    <link href="https://fonts.googleapis.com/css?family=Poppins" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro" rel="stylesheet">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <link href="~/Content/Site.css" rel="stylesheet" />
    @*@Scripts.Render("~/bundles/modernizr")*@

</head>
<body>


    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="/"><img src="~/Content/Images/General/logo.svg" /></a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav ml-auto" style="font-family: 'Poppins' !important;">
                <li class="nav-item active">
                    <a class="nav-link" href="/">HOME</a>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        SERVICES
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                        <a class="dropdown-item" href="/training">TRAINING</a>
                        <a class="dropdown-item" href="/Thyroid-Courses">THYROID COURSES</a>
                        <a class="dropdown-item" href="/nutrition">NUTRITION</a>
                    </div>
                </li>
                @Html.Partial("~/views/partials/navigation/Navigation.cshtml")
                <li class="nav-item">
                    <a class="nav-link active" href="/home/contact">CONTACT</a>
                </li>
            </ul>
        </div>
    </nav>


    @RenderBody()


    <div class="footer">
        <div class="CenterAndRestrictWidth footerContainer">
            <div class="float-left  d-none d-md-block ">
                <div><a href="" onclick="openInNewTab('/Home/PrivacyPolicy')" class="privacy-policy">Privacy Policy</a></div>
                <div><a href="//bendando.com" class="hoverEffect">&copy;Bendando</a></div>
            </div>
            <div class="float-md-right SocialMediaIcons" style="">
                <img id="facebook" class="hoverEffect" src="~/Content/Images/SocialMedia/New/facebook.png" style="padding:5px;width: 39px; height: 39px;" />
                <img id="instagram" class="hoverEffect" src="~/Content/Images/SocialMedia/New/Instagram.png" style="padding:5px;width: 39px; height: 39px;" />
            </div>
            <div class="float-md-right contactInfo">
                <div style="font-weight:bold;">Contact</div>
                <div><a id="footerMailTo" href="mailto:info@beyondbalance.co.uk">info@beyondbalance.co.uk</a></div>
                <div>Phone: <a class="hoverEffect" href="tel:+44 (0)79 6157 1500">+44 (0)79 6157 1500</a></div>
            </div>
            <div class="text-center d-md-none hoverEffect" style="padding-top: 15px;"><a href="" onclick="openInNewTab('/Home/PrivacyPolicy')" class="privacy-policy">Privacy Policy</a></div>
            <div class="text-center d-md-none hoverEffect"><a href="//bendando.com">&copy;Bendando</a></div>
        </div>
    </div>




    <script src="https://code.jquery.com/jquery-3.3.1.min.js"
            integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8="
            crossorigin="anonymous"></script>
    <script>
        if (typeof jQuery == 'undefined') { document.write(unescape("%3Cscript src='Scripts/jquery-3.2.1.min.js' type='text/javascript'%3E%3C/script%3E")); }
    </script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>

    @*
    <script src="https://cdnjs.cloudflare.com/ajax/libs/tether/1.4.0/js/tether.min.js" integrity="sha384-DztdAPBWPRXSA/3eYEEUWrWCy7G5KFbe8fFjk5JAIxUYHKkDx6Qin1DkWx51bBrb" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/js/bootstrap.min.js" integrity="sha384-vBWWzlZJ8ea9aCX4pEW3rVHjgjt7zpkNpZk+02D9phzyeVkE+jo0ieGizqPLForn" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/respond.js/1.4.2/respond.min.js" crossorigin="anonymous"></script>*@

    <script>
        $("#facebook").click(function () {
            window.open('https://www.facebook.com//beyondbalanceBB/');
        });
        $("#instagram").click(function () {
            window.open('https://www.instagram.com/beyondbalance/');
        });
        $("#twitter").click(function () {
            window.open('https://twitter.com/beyondbalanceUK');
        });

        function openInNewTab(url) {
            var win = window.open(url, '_blank');
            win.focus();
        }

    </script>
    <script>
        var MemberSpace = window.MemberSpace || { "subdomain": "thyroidtherapy" };
        (function (d) {
            var s = d.createElement("script");
            s.src = "https://cdn.memberspace.com/scripts/widgets.js";
            var e = d.getElementsByTagName("script")[0];
            e.parentNode.insertBefore(s, e);
        }(document));
    </script>

    @RenderSection("scripts", required: false)



</body>
</html>

